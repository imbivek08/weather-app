pipeline{
  agent any
  stages{
    stage("Check out Repo"){
      steps{
        git branch: 'main', url: 'https://github.com/imbivek08/weather-app'
      }
    }
    stage("Docker Image Build") {
            steps {
                script {
                    
                    sh 'docker system prune -f'
                    sh 'docker container prune -f'
                    sh 'docker build -t ${AWS_ECR_REPO_NAME} .'
                    
                }
            }
        }
    
  }

}